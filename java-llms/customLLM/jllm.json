{
    "id": "custom-llm-chat",
    "meta": {
        "label": "Custom LLM Connector"
    },
    "params": [
        {
            "name": "endpoint_url",
            "label": "Endpoint URL",
            "type": "STRING",
            "defaultValue": "",
            "description": "Base API endpoint URL (embeddings endpoint will be derived from this)",
            "mandatory": true
        },
        {
            "name": "model",
            "label": "Model Key",
            "type": "STRING",
            "description": "Model identifier for CustomLLM API",
            "defaultValue": "",
            "mandatory": true
        },
        {
            "name": "inputType",
            "label": "Input Type",
            "description": "Input Type for embedding model only",
            "type": "SELECT",
            "selectChoices": [
                { "value": "query", "label": "query"},
                { "value": "passage", "label": "passage"}
            ],
            "defaultValue": "query",
            "mandatory": false
        },
        {
            "name": "maxParallelism",
            "label": "Maximum Parallelism",
            "type": "INT",
            "defaultValue": 8,
            "mandatory": true
        },
        {
            "name": "networkTimeout",
            "label": "Network Timeout",
            "type": "INT",
            "description": "(in milliseconds)",
            "defaultValue": 60000,
            "mandatory": true
        },
        {
            "name": "maxRetries",
            "label": "Max Retries",
            "type": "INT",
            "defaultValue": 3,
            "mandatory": true
        },
        {
            "name": "firstRetryDelay",
            "label": "First Retry Delay",
            "type": "INT",
            "defaultValue": 3000,
            "description": "(in milliseconds)",
            "mandatory": true
        },
        {
            "name": "retryDelayScale",
            "label": "Retry Delay Scale Factor",
            "type": "INT",
            "defaultValue": 2,
            "description": "(multiplier per retry)",
            "mandatory": true
        },
        {
            "name": "send_system_name_value",
            "label": "Send-System-Name Value",
            "type": "STRING",
            "description": "Send-System-Name 헤더의 값 (최초 API 받을 때의 이름)",
            "mandatory": true
        },
        {
            "name": "user_id_value",
            "label": "User-Id Value",
            "type": "STRING",
            "description": "User-Id 헤더의 값 (사용자 ID)",
            "mandatory": true
        },
        {
            "name": "prompt_msg_id_value",
            "label": "Prompt-Msg-Id Value",
            "type": "STRING",
            "description": "Prompt-Msg-Id 헤더의 값 (16자리 uuid)",
            "mandatory": true
        },
        {
            "name": "completion_msg_id_value",
            "label": "Completion-Msg-Id Value",
            "type": "STRING",
            "description": "Completion-Msg-Id 헤더의 값 (16자리 uuid)",
            "mandatory": true
        },
        {
            "name": "x_dep_ticket_value",
            "label": "x-dep-ticket Value",
            "type": "STRING",
            "description": "x-dep-ticket 헤더의 값 (API Key)",
            "mandatory": true
        }
    ],
    "clientClass": "com.customllm.llm.CustomPlugin"
} 