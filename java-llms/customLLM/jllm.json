{
    "id": "custom-llm-chat",
    "meta": {
        "label": "Custom LLM Connector"
    },
    "params": [
        {
            "name": "apikeys",
            "label": "Keys preset",
            "type": "PRESET",
            "parameterSetId": "api-credentials"
        },
        {
            "name": "endpoint_url",
            "label": "Endpoint URL",
            "type": "STRING",
            "defaultValue": "",
            "description": "Base API endpoint URL (embeddings endpoint will be derived from this)",
            "mandatory": true
        },
        {
            "name": "model",
            "label": "Model Key",
            "type": "STRING",
            "description": "Model identifier for CustomLLM API",
            "defaultValue": "",
            "mandatory": true
        },
        {
            "name": "inputType",
            "label": "Input Type",
            "description": "Input Type for embedding model only",
            "type": "SELECT",
            "selectChoices": [
                { "value": "query", "label": "query"},
                { "value": "passage", "label": "passage"}
            ],
            "defaultValue": "query",
            "mandatory": false
        },
        {
            "name": "maxParallelism",
            "label": "Maximum Parallelism",
            "type": "INT",
            "defaultValue": 8,
            "mandatory": true
        },
        {
            "name": "networkTimeout",
            "label": "Network Timeout",
            "type": "INT",
            "description": "(in milliseconds)",
            "defaultValue": 60000,
            "mandatory": true
        },
        {
            "name": "maxRetries",
            "label": "Max Retries",
            "type": "INT",
            "defaultValue": 3,
            "mandatory": true
        },
        {
            "name": "firstRetryDelay",
            "label": "First Retry Delay",
            "type": "INT",
            "defaultValue": 3000,
            "description": "(in milliseconds)",
            "mandatory": true
        },
        {
            "name": "retryDelayScale",
            "label": "Retry Delay Scale Factor",
            "type": "INT",
            "defaultValue": 2,
            "description": "(multiplier per retry)",
            "mandatory": true
        },
        {
            "name": "enableToolCalling",
            "label": "Enable Tool Calling",
            "type": "BOOLEAN",
            "defaultValue": false,
            "description": "Enable OpenAI-compatible tool calling support",
            "mandatory": false
        },
        {
            "name": "debugMode",
            "label": "Debug Mode",
            "type": "BOOLEAN",
            "defaultValue": false,
            "description": "Enable detailed logging for debugging",
            "mandatory": false
        }
    ],
    "clientClass": "com.customllm.llm.CustomPlugin"
}